<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Add"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add"
            app:layout_constraintTop_toBottomOf="@+id/et_gmail"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="@+id/et_gmail"
            android:onClick="Click"
    />
    <Button
            android:text="Read"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_read"
            app:layout_constraintTop_toBottomOf="@+id/et_gmail"
            android:layout_marginTop="72dp"
            app:layout_constraintStart_toEndOf="@+id/button_add"
            android:layout_marginStart="51dp"
            app:layout_constraintEnd_toEndOf="@+id/et_gmail"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/button_add"
            app:layout_constraintVertical_bias="1.0"
            android:onClick="Click"
    />
    <Button
            android:text="Clear"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_clear"
            app:layout_constraintTop_toBottomOf="@+id/button_add"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="@+id/button_read"
            app:layout_constraintStart_toStartOf="@+id/button_add"
            android:onClick="Click"
    />
    <EditText
            android:text=""
            android:hint="Введите своё имя:"
            android:layout_width="209dp"
            android:layout_height="52dp"
            android:id="@+id/et_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintVertical_bias="0.179"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Введите GMAIL:"
            android:ems="10"
            android:id="@+id/et_gmail"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            app:layout_constraintStart_toStartOf="@+id/et_name"
            app:layout_constraintEnd_toEndOf="@+id/et_name"

    />

</androidx.constraintlayout.widget.ConstraintLayout>